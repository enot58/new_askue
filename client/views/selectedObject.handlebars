<div class="container">

    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
        <!--<a href="/"><button class="btn btn-primary me-md-2" type="button">Назад</button></a>-->
        <form method="post">
            <button class="btn btn-primary me-md-2" type="submit">Добавить секцию</button>
        </form>
        <!--<a href="/addSection"><button class="btn btn-primary me-md-2" type="button">Добавить секцию</button></a>-->
        <a href=""><button class="btn btn-primary me-md-2" type="button">Техзадание</button></a>

    </div>

    <main>
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
    {{#each section}}
            {{#if number}}
            <div class="col mt-3">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3">
                    <h4 class="my-0 fw-normal">Секция №{{number}}</h4>
                </div>
                <div class="card-body">
                    <!--<h1 class="card-title pricing-card-title">$15<small class="text-muted fw-light">/mo</small></h1>-->
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Квартир 100</li>
                        <li>Стояков 2</li>
                        <li>Офисов 10</li>
                        <li>Приборов 250</li>
                        <li>Теплосчётчиков</li>
                        <li>Электросчётчиков</li>
                        <li>Этажей</li>
                    </ul>
                    <div class="row">
                        <!--<div class="col"><a href="/selectedSection/{{id}}/?idSection={{id}}&objectId={{objectId}}"><button type="button" class="w-100 btn btn-lg btn-primary">Перейти</button></a></div>-->
                        <div class="col"><a href="/selectTypePage/{{id}}/?idSection={{id}}&objectId={{objectId}}"><button type="button" class="w-100 btn btn-lg btn-primary">Перейти</button></a></div>
                        <div class="col">
                            <form action="del/{{objectId}}/{{id}}" method="post">
                                <button type="submit" class="w-100 btn btn-lg btn-danger">Удалить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            {{else}}
                <h6>Секций пока нет</h6>
            {{/if}}
    {{/each}}

        </div>
    </main>


</div>